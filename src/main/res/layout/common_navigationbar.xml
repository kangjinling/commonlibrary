<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/navbar_style"
    android:id="@+id/nav_bar_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_bar_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:gravity="center" />

    <TextView
        android:id="@+id/nav_bar_title"
        style="@style/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:singleLine="true" />
    <ImageView
        android:id="@+id/iv_left_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:padding="5dp" />
    <CheckedTextView
        android:id="@+id/nav_bar_right_txt"
        style="@style/nav_bar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/txt_release"
        style="@style/nav_bar_text_style"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="center"
        android:textColor="@color/red" />
    <ImageView
        android:id="@+id/nav_bar_right_image"
        style="@style/nav_bar_text_style"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/layout_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_notifation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_notification"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/iv_notifation" />
    </RelativeLayout>
</RelativeLayout>